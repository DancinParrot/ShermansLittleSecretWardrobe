@page
@model ShermansLittleSecretWardrobe.Pages.ShoppingCartModel

@{
    ViewData["Title"] = "ShoppingCart";
}

<h1>ShoppingCart</h1>

<div>
    <h4>Cart</h4>
    <hr />
    <dl class="row">
        @foreach (var item in Model.CartItems)
        {
        <dt class="col-sm-2">
            Id of Item Added to Cart: @item.ProductId
        </dt>
        <dd class="col-sm-10">
            Item Count: @item.ItemCount
        </dd>
        }

    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Cart?.CartId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
