@page
@model ShermansLittleSecretWardrobe.Pages.Orders.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderStatus)
        </dd>
        
        @if(User.IsInRole("Admin"))
        {
            <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.UserId)
            </dt>
            <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.UserId)
            </dd>
            <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.ShippingId)
            </dt>
            <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.ShippingId)
            </dd>
        }

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.CreationTimestamp)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.CreationTimestamp)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.PaymentMethod)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.PaymentMethod)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.PaymentAmount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.PaymentAmount)
        </dd>
    </dl>
</div>
<div>
    @if(User.IsInRole("Admin"))
    {
        <a asp-page="./Edit" asp-route-id="@Model.Order?.OrderId">Edit</a>
    }
    <a asp-page="./Index">Back to List</a> |
    <a asp-page="./Receipt" asp-route-orderId="@Model.Order.OrderId">Receipt</a>
</div>
